<div class="form-inline">
	<div class="form-group">
		<select class="search-category-input form-control" placeholder="Select category">
			<option></option>
			<option value="prodId" {{#if prodId}}disabled{{/if}}>Prod ID</option>
			<option value="indexId" {{#if indexId}}disabled{{/if}}>Index ID</option>
			<option value="ipdsId" {{#if ipdsId}}disabled{{/if}}>IPDS</option>
			<option value="contributor" {{#if contributor}}disabled{{/if}}>Contributor</option>
			<option value="title" {{#if title}}disabled{{/if}}>Title</option>
			<option value="typeName" {{#if typeName}}disabled{{/if}}>Publication Type</option>
			<option value="subtypeName" {{#if subtypeName}}disabled{{/if}}>Publication Subtype</option>
			<option value="seriesName" {{#if seriesName}}disabled{{/if}}>Series Title</option>
			<option value="year" {{#if year}}disabled{{/if}}>Publication Year</option>
		</select>
	</div>
	<div class="form-group text-input-div">
		<input type="text" class="value-text-input form-control">
	</div>
	<div class="form-group select-input-div" style="display:none">
		<select class="value-select-input" multiple></select>
	</div>
</div>
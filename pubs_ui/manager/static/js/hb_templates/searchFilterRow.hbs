<div class="search-filter-row form-inline">
	<div class="form-group search-category-div">
		<select class="search-category-input form-control" placeholder="Select category">
			<option>Select Category</option>
			{{#each categories}}
				<option value="{{id}}" {{#if disabled}}disabled{{/if}}>{{text}}</option>
			{{/each}}
		</select>
	</div>
	<div class="search-category-value-div">
		<div class="form-group text-input-div">
			<input type="text" class="value-text-input form-control">
		</div>
		<div class="form-group select-input-div" style="display:none">
			<select class="value-select-input" multiple style="width: 100%"></select>
		</div>
	</div>
</div>
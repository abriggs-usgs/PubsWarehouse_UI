<div class="back-to-search-div"><a class="back-to-search-btn" href=#">Back to Search</a></div>
<div class="edit-series-container panel panel-default">
	<div class="panel-heading"><h2 class="panel-title">Edit Affiliations</h2></div>
	<div class="panel-body">
		<div class="affiliation-alert-container"></div>
		<div class="loading-indicator"><i class="fa fa-spinner fa-spin fa-5x"></i></div>
		<div class="validation-errors"></div>
		<div class="create-or-edit-div {{#if id}}hidden{{else}}show{{/if}}">
			<button class="btn btn-primary create-btn" type="button">Create</button>
			<span>Or</span>
			<div class="edit-select-series-div">
				<div class="form-group">
					<label>Select an affiliation type and then an affiliation</label>
					<div>
						<select id="edit-affiliation-type-input" class="form-control" data-placeholder="Select affiliation type" style="width:100%"></select>
					</div>
					<div class="form-group">
						<select disabled id="edit-affiliation-input" class="form-control" data-placeholder="Select affiliation name - enter 1 or more characters" style="width:100%">
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="edit-div form-horizontal {{#if id}}show{{else}}hidden{{/if}}">
			<div class="form-group">
				<label class="control-label" for="affiliation-input">Affiliation *</label>
				<div>
					<input required id="affiliation-input" class="form-control" type="text" />
				</div>
			</div>
			<div class="form-group">
				<label class="control-label" for="affiliation-active-input">Active</label>
				<div>
					<input id="affiliation-active-input" type="checkbox" />
				</div>
			</div>
			<div class="form-group" id="cost-center-input-div">
				<label class="control-label" for="cost-center-input">Cost Center</label>
				<div>
					<input id="cost-center-input" type="checkbox" />
				</div>
			</div>
			<div>
				<button class="btn btn-primary save-btn" type="button">Save</button>
				<button class="btn btn-default cancel-btn" type="button">Cancel</button>
				<button class="btn btn-default create-new-btn" type="button">Edit New Affiliation</button>
				<button class="btn btn-default delete-btn" type="button" data-toggle="modal" data-target="#confirm-modal">Delete</button>
			</div>
			<div class="modal fade" id="confirm-modal" tatabindex="-1" role="dialog">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							<h4 class="modal-title">Confirm</h4>
						</div>
						<div class="modal-body">
							<p>Are you sure you want to delete this affiliation?</p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
							<button type="button" class="delete-ok-btn btn btn-primary" data-dismiss="modal">OK</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{
  "name": "pubs_ui",
  "version": "2.16.0dev",
  "description": "Publications Warehouse User Interface",
  "main": "scripts/manager/index.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/USGS-CIDA/PubsWarehouse_UI"
  },
  "scripts": {
    "build": "run-p build:* buildvendor:* && npm run hash-assets",
    "build:js": "mkdir -p dist/scripts && rollup -c --environment NODE_ENV:production",
    "build:css": "run-p buildcss:*",
    "buildcss:usgs": "lessc styles/usgs_header_footer.less > dist/usgs_style.css && uglifycss --output dist/usgs_style.css dist/usgs_style.css && postcss dist/usgs_style.css --no-map --use autoprefixer -o dist/usgs_style.css",
    "buildcss:css_base": "lessc styles/pubswh/pubs_base.less > dist/pubs_base.css && uglifycss --output dist/pubs_base.css dist/pubs_base.css && postcss dist/pubs_base.css --no-map --use autoprefixer -o dist/pubs_base.css",
    "buildcss:auth": "lessc styles/auth.less > dist/auth.css && uglifycss --output dist/auth.css dist/auth.css && postcss dist/auth.css --no-map --use autoprefixer -o dist/auth.css",
    "buildcss:manager": "lessc styles/manager/manager_custom.less > dist/manager.css && uglifycss --output dist/manager.css dist/manager.css && postcss dist/manager.css --no-map --use autoprefixer -o dist/manager.css",
    "buildcss:metrics": "lessc styles/metrics/metrics_custom.less > dist/metrics.css && uglifycss --output dist/metrics.css dist/metrics.css && postcss dist/metrics.css --no-map --use autoprefixer -o dist/metrics.css",
    "build:fonts": "mkdir -p dist/fonts && cp node_modules/font-awesome/fonts/* dist/fonts && cp node_modules/bootstrap/fonts/* dist/fonts",
    "build:images": "mkdir -p dist/images && cp -r images/* dist/images",
    "build:tinymceskins": "mkdir -p dist/tinymce/skins && cp -r node_modules/tinymce/skins/* dist/tinymce/skins",
    "buildvendor:academicons": "mkdir -p dist/vendor/academicons && cp -r bower_components/academicons/* dist/vendor/academicons",
    "buildvendor:git": "cp -r scripts/vendor dist/scripts",
    "buildvendor:leaflet": "mkdir -p dist/vendor/leaflet && cp -r node_modules/leaflet/dist/* dist/vendor/leaflet",
    "buildvendor:esri-leaflet": "mkdir -p dist/vendor/esri-leaflet && cp -r node_modules/esri-leaflet/dist/* dist/vendor/esri-leaflet",
    "buildvendor:leaflet-draw": "mkdir -p dist/vendor/leaflet-draw && cp -r node_modules/leaflet-draw/dist/* dist/vendor/leaflet-draw",
    "buildvendor:MathJax": "mkdir -p dist/vendor && ln -sfn ../../node_modules/mathjax dist/vendor/MathJax",
    "buildvendor:systemjs": "mkdir -p dist/vendor && cp node_modules/systemjs/dist/system.js dist/vendor",
    "hash-assets": "gulp --gulpfile ./gulpfile.js revall",
    "lint": "eslint scripts tests",
    "serve:static": "live-server --port=9000 --cors --no-browser dist",
    "test": "karma start tests/js/manager/karma.conf.js && karma start tests/js/metrics/karma.conf.js && karma start tests/js/pubswh/karma.conf.js",
    "test:watch": "run-p test:watchitem:*",
    "test:watchitem:manager": "karma start tests/js/manager/karma.conf.js --debug --no-single-run --browsers Chrome",
    "test:watchitem:metrics": "karma start tests/js/metrics/karma.conf.js --debug --no-single-run --browsers Chrome",
    "test:watchitem:pubswh": "karma start tests/js/pubswh/karma.conf.js --debug --no-single-run --browsers Chrome",
    "watch": "run-p watch:* serve:static",
    "watch:css": "nodemon -w ./styles -e less -x \"npm run build:css\"",
    "watch:js": "mkdir -p dist/scripts && run-p buildvendor:* && rollup -c --watch",
    "watch:fonts": "npm run build:fonts",
    "watch:images": "npm run build:images"
  },
  "engines": {
    "node": "8.11.2"
  },
  "author": "OWI",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.6.2",
    "bower": "^1.8.4",
    "eslint": "^4.19.1",
    "eslint-plugin-jasmine": "^2.10.1",
    "gulp": "^3.9.1",
    "gulp-rev-all": "^0.9.7",
    "jasmine-core": "2.6.1",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.1.1",
    "karma-firefox-launcher": "1.0.1",
    "karma-jasmine": "1.1.0",
    "karma-js-coverage": "0.4.0",
    "karma-requirejs": "1.1.0",
    "karma-rollup-preprocessor": "^6.0.0",
    "karma-sinon": "1.0.5",
    "less": "2.7.1",
    "live-server": "^1.2.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.0",
    "requirejs": "2.3.3",
    "rollup": "^0.60.2",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-handlebars-plus": "^0.2.3",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "sinon": "2.2.0",
    "uglify-es": "^3.3.9",
    "uglifycss": "0.0.29"
  },
  "dependencies": {
    "backbone": "^1.3.3",
    "backbone.paginator": "^2.0.5",
    "backbone.stickit": "^0.9.2",
    "backgrid": "^0.3.8",
    "backgrid-paginator": "^0.3.9",
    "bootstrap": "^3.3.7",
    "dygraphs": "^1.1.1",
    "eonasdan-bootstrap-datetimepicker": "^4.17.47",
    "esri-leaflet": "^2.0.8",
    "font-awesome": "^4.6.3",
    "jquery": "^2.2.4",
    "jquery-ui": "^1.12.0",
    "leaflet": "^1.0.3",
    "leaflet-draw": "^0.4.9",
    "lodash": "^4.17.10",
    "loglevel": "^1.4.1",
    "mathjax": "^2.7.1",
    "moment": "^2.15.2",
    "select2": "^4.0.3",
    "select2-bootstrap-theme": "0.1.0-beta.10",
    "systemjs": "^0.21.4",
    "tinymce": "^4.7.13",
    "wellknown": "^0.5.0"
  },
  "eslintIgnore": [
    "scripts/vendor"
  ]
}

{
  "name": "pubs_ui",
  "version": "1.0.0",
  "description": "Publications Warehouse User Interface",
  "main": "scripts/manager/index.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/USGS-CIDA/PubsWarehouse_UI"
  },
  "scripts": {
    "build": "run-p build:* && npm run hash-assets",
    "build:flaskassets": "../server/env/bin/python ../server/manage.py assets build",
    "build:js": "mkdir -p dist/scripts && rollup -c --environment NODE_ENV:production",
    "build:collectassets": "../server/env/bin/python ../server/manage.py collect",
    "hash-assets": "echo TODO",
    "serve:static": "live-server --port=9000 --cors --no-browser dist",
    "test": "karma start tests/js/manager/karma.conf.js --reporters progress && karma start tests/js/metrics/karma.conf.js && karma start tests/js/pubswh/karma.conf.js --reporters progress",
    "watch": "run-p watch:* serve:static",
    "watch:js": "mkdir -p dist/scripts && rollup -c --watch"
  },
  "engines": {
    "node": "8.11.2"
  },
  "author": "OWI",
  "license": "MIT",
  "devDependencies": {
    "bower": "1.8.2",
    "gulp": "^3.9.1",
    "gulp-rev-all": "^0.9.7",
    "jasmine-core": "2.6.1",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.1.1",
    "karma-firefox-launcher": "1.0.1",
    "karma-jasmine": "1.1.0",
    "karma-js-coverage": "0.4.0",
    "karma-requirejs": "1.1.0",
    "karma-sinon": "1.0.5",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "requirejs": "2.3.3",
    "rollup": "^0.60.2",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-handlebars-plus": "^0.2.3",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "sinon": "2.2.0"
  },
  "dependencies": {
    "less": "2.7.1"
  }
}
